{
    "source" : {
        "include" : ["src"],
        "includePattern": ".jsx$|.js$",
        "excludePattern": "(nodes_modules/|docs/|public)"        
    },
    "plugins" : ["plugins/markdown"],
    "templates": {
        "cleverLinks" : true,
        "monospaceLinks" : true
    },
    "opts" : {
        "recurse" : true,
        "destination" : "./docs/",
        "readme" : "./README.md"
    }
}